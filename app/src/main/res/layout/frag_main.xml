<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_yellow"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:padding="5dp"
            android:background="@drawable/bg_score"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvScore"
            app:layout_constraintLeft_toLeftOf="@id/tvScore"
            app:layout_constraintRight_toRightOf="@id/tvScore"
            />

        <ImageView
            android:id="@+id/bgRanking"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_ranking"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <ImageView
            android:id="@+id/trophy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trophy"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/bgRanking"
            />

        <TextView
            android:id="@+id/recordScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:elevation="10dp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toTopOf="@id/bgRanking"
            app:layout_constraintLeft_toRightOf="@id/trophy"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/bgRanking"
            />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_board_boxes"
            android:padding="5dp"
            android:clickable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <TextView
                android:id="@+id/btn0"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="15dp"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bg_box_default"
                android:layout_margin="@dimen/sizeOfBoxMargin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn1"
                />

            <TextView
                android:id="@+id/btn1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="15dp"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/bg_box_default"
                android:gravity="center"
                android:layout_margin="@dimen/sizeOfBoxMargin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btn0"
                app:layout_constraintRight_toLeftOf="@id/btn2"
                />

            <TextView
                android:id="@+id/btn2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="15dp"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/bg_box_default"
                android:gravity="center"
                android:layout_margin="@dimen/sizeOfBoxMargin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btn1"
                app:layout_constraintRight_toLeftOf="@id/btn3"
                />

            <TextView
                android:id="@+id/btn3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="15dp"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/bg_box_default"
                android:gravity="center"
                android:layout_margin="@dimen/sizeOfBoxMargin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btn2"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/btn4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="15dp"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bg_box_default"
                android:layout_margin="@dimen/sizeOfBoxMargin"
                app:layout_constraintTop_toBottomOf="@id/btn0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn5"
                />

            <TextView
                android:id="@+id/btn5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="15dp"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/bg_box_default"
                android:gravity="center"
                android:layout_margin="@dimen/sizeOfBoxMargin"
                app:layout_constraintTop_toBottomOf="@id/btn0"
                app:layout_constraintLeft_toRightOf="@id/btn4"
                app:layout_constraintRight_toLeftOf="@id/btn6"
                />

            <TextView
                android:id="@+id/btn6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="15dp"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/bg_box_default"
                android:gravity="center"
                android:layout_margin="@dimen/sizeOfBoxMargin"
                app:layout_constraintTop_toBottomOf="@id/btn0"
                app:layout_constraintLeft_toRightOf="@id/btn5"
                app:layout_constraintRight_toLeftOf="@id/btn7"
                />

            <TextView
                android:id="@+id/btn7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="15dp"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/bg_box_default"
                android:gravity="center"
                android:layout_margin="@dimen/sizeOfBoxMargin"
                app:layout_constraintTop_toBottomOf="@id/btn0"
                app:layout_constraintLeft_toRightOf="@id/btn6"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/btn8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="15dp"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bg_box_default"
                android:layout_margin="@dimen/sizeOfBoxMargin"
                app:layout_constraintTop_toBottomOf="@id/btn4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn9"
                />

            <TextView
                android:id="@+id/btn9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="15dp"
